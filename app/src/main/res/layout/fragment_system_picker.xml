<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/new_file_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="new"
            app:layout_constraintEnd_toStartOf="@id/open_document_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/open_document_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="open"
            app:layout_constraintEnd_toEndOf="@id/open_document_tree_button"
            app:layout_constraintStart_toEndOf="@id/new_file_button"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/open_document_tree_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="open tree"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/open_document_button"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>